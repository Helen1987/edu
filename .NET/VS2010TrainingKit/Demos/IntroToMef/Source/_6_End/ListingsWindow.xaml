<Window x:Class="ContosoRealtor.ListingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Contoso Realtor" Height="480" Width="640">
    <DockPanel VerticalAlignment="Stretch" >
        <StackPanel DockPanel.Dock="Top">
            <DataGrid Name="listingsGrid"></DataGrid>
            <StackPanel FlowDirection="RightToLeft" >
                <ItemsControl Name="listingControls"></ItemsControl>
            </StackPanel>
        </StackPanel>
        <TextBlock Name="repositoryStatus" DockPanel.Dock="Bottom" FontSize="20" FontStyle="Italic" VerticalAlignment="Bottom"></TextBlock>
    </DockPanel>
</Window>
